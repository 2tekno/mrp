mixin projectManagersTable(contacts,projectManagers)

	table#projectManagersTable.table-bordered(style='width:100%; table-layout:fixed;')
		thead
			tr
				th(style='width:90%') 
					button.btn.btn-default.btn-sm.fa.fa-plus(type='button'  onClick="addTableRow('projectManagersTable');") Project Manager
					
				th(style='width:10%')
		tbody
			tr(style='display:none;')
				td
					select(style={width: '100%'} id='projectManagers' name='projectManagers' data-placeholder='')
						each item in contacts
							option(value=item.ContactID) #{item.FullName}

			if (projectManagers)
				each ci in projectManagers
					tr(id = `${ci.ProjectManagerID}` )
						td
							select(style={width: '100%'} id='projectManagers' name='projectManagers' data-placeholder='')
								each item in contacts
									option(value=item.ContactID selected=ci.ContactID==item.ContactID) #{item.FullName}
