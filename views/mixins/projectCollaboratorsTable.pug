mixin projectCollaboratorsTable(contacts,projectCollaborators)

	//- table#projectCollaboratorsTable.table-bordered(style='width:100%; table-layout:fixed;')
	table#projectCollaboratorsTable.table-bordered(style='width:100%;')
		thead
			tr
				th(style='width:90%') 
					button.btn.btn-default.btn-sm.fa.fa-plus(type='button'  onClick="addTableRow('projectCollaboratorsTable');") Project Collaborator
					
				th(style='width:10%')
		tbody
			tr(style='display:none;')
				td
					select(style={width: '100%'} id='projectCollaborators' name='projectCollaborators' data-placeholder='')
						each item in contacts
							option(value=item.ContactID) #{item.FullName}

			if (projectCollaborators)
				each ci in projectCollaborators
					tr(id = `${ci.ProjectCollaboratorID}` )
						td
							select(style={width: '100%'} id='projectCollaborators' name='projectCollaborators' data-placeholder='')
								each item in contacts
									option(value=item.ContactID selected=ci.ContactID==item.ContactID) #{item.FullName}