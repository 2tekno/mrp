
mixin principalInvestigatorsTable(contacts,principalInvestigators)

	table#principalInvestigatorsTable.table-bordered(style='width:100%')
		thead
			tr
				th(style='width:90%') 
					button.btn.btn-default.btn-sm.fa.fa-plus(type='button'  onClick="addTableRow('principalInvestigatorsTable');") Principal Investigator
					
				th(style='width:10%')
		tbody
			tr(style='display:none;')
				td
					select(style={width: '100%'} id='principalInvestigators' name='principalInvestigators' data-placeholder='')
						each item in contacts
							option(value=item.ContactID) #{item.FullName}

			if (principalInvestigators)
				each ci in principalInvestigators
					tr(id = `${ci.SubProjectPIID}` )
						td
							select(style={width: '100%'} id='principalInvestigators' name='principalInvestigators' data-placeholder='')
								each item in contacts
									option(value=item.ContactID selected=ci.ContactID==item.ContactID) #{item.FullName}
