mixin groupContactsTable(contacts,groupContacts)

	table#groupContactsTable.table-bordered(style='width:100%')
		thead
			tr
				th(style='width:90%') 
					button.btn.btn-default.btn-sm.fa.fa-plus(type='button'  onClick="addTableRow('groupContactsTable');") Add Contact
					
				th(style='width:10%')
		tbody
			tr(style='display:none;')
				td
					select(style={width: '100%'} id='groupContacts' name='groupContacts' data-placeholder='')
						each item in contacts
							option(value=item.ContactID) #{item.FullName}

			if (groupContacts)
				each ci in groupContacts
					tr(id = `${ci.PeopleGroupContactID}` )
						td
							select(style={width: '100%'} id='groupContacts' name='groupContacts' data-placeholder='')
								each item in contacts
									option(value=item.ContactID selected=ci.ContactID==item.ContactID) #{item.FullName}
