mixin modal-select-product

	.modal.fade#modal-select-product(tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true")
		.modal-dialog.modal-dialog-centered.modal-lg
			.modal-content
				.modal-header
					.h5.modal-title Select Product
				.modal-body
					input.form-control(type='hidden' id='selectedproductid' name='selectedproductid' value='')
					table#productTable.row-border.hover.order-column(style='width:100%;')
						thead
							tr
								th Item Number
								th Product Description
								th
							tbody
				
			
				.modal-footer
					button.btn.btn-primary(type='button' data-dismiss="modal") Cancel
					button.btn.btn-secondary(type='button' id='product-confirm' data-dismiss="modal") Save