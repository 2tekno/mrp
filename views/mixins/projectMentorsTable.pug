mixin projectMentorsTable(contacts,projectMentors)

	table#projectMentorsTable.table-bordered(style='width:100%; table-layout:fixed;')
		thead
			tr
				th(style='width:90%') 
					button.btn.btn-default.btn-sm.fa.fa-plus#addProjectMentor(type='button'  onClick="addTableRow('projectMentorsTable');") Project Mentor
					
				th(style='width:10%')
		tbody
			tr(style='display:none;')
				td
					select(style={width: '100%'} id='projectMentors' name='projectMentors' data-placeholder='')
						each item in contacts
							option(value=item.ContactID) #{item.FullName}

			if (projectMentors)
				each ci in projectMentors
					tr(id = `${ci.ProjectMentorID}` )
						td
							select(style={width: '100%'} id='projectMentors' name='projectMentors' data-placeholder='')
								each item in contacts
									option(value=item.ContactID selected=ci.ContactID==item.ContactID) #{item.FullName}

