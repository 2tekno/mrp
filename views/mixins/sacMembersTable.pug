mixin sacMembersTable(contacts,projectSACMembers)

	//table#sacMembersTable.table-bordered(style='width:100%; table-layout:fixed;')
	table#sacMembersTable.table-bordered(style='width:100%;')
		thead
			tr
				th(style='width:90%') 
					button.btn.btn-default.btn-sm.fa.fa-plus(type='button'  onClick="addTableRow('sacMembersTable');") SAC Members
					
				th(style='width:10%')
		tbody
			tr(style='display:none;')
				td
					select(style={width: '100%'} id='projectSACMembers' name='projectSACMembers' data-placeholder='')
						each item in contacts
							option(value=item.ContactID) #{item.FullName}

			if (projectSACMembers)
				each ci in projectSACMembers
					tr(id = `${ci.ProjectSACMemberID}` )
						td
							select(style={width: '100%'} id='projectSACMembers' name='projectSACMembers' data-placeholder='')
								each item in contacts
									option(value=item.ContactID selected=ci.ContactID==item.ContactID) #{item.FullName}
