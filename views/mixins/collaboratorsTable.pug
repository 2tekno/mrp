
mixin collaboratorsTable(contacts,collaborators)

	table#collaboratorsTable.table-bordered(style='width:100%')
		thead
			tr
				th(style='width:90%') 
					button.btn.btn-default.btn-sm.fa.fa-plus(type='button'  onClick="addTableRow('collaboratorsTable');") Collaborator
					
				th(style='width:10%')
		tbody
			tr(style='display:none;')
				td
					select(style={width: '100%'} id='collaborators' name='collaborators' data-placeholder='')
						each item in contacts
							option(value=item.ContactID) #{item.FullName}

			if (collaborators)
				each ci in collaborators
					tr(id = `${ci.SubProjectCollaboratorID}` )
						td
							select(style={width: '100%'} id='collaborators' name='collaborators' data-placeholder='')
								each item in contacts
									option(value=item.ContactID selected=ci.ContactID==item.ContactID) #{item.FullName}
